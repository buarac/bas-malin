{
  "typography": {
    "fontFamilies": {
      "sans": ["Inter", "system-ui", "sans-serif"],
      "mono": ["JetBrains Mono", "Fira Code", "monospace"],
      "display": ["Inter Display", "Inter", "system-ui", "sans-serif"]
    },
    "fontSizes": {
      "xs": "0.75rem",
      "sm": "0.875rem", 
      "base": "1rem",
      "lg": "1.125rem",
      "xl": "1.25rem",
      "2xl": "1.5rem",
      "3xl": "1.875rem",
      "4xl": "2.25rem",
      "5xl": "3rem",
      "6xl": "3.75rem",
      "7xl": "4.5rem",
      "8xl": "6rem",
      "9xl": "8rem"
    },
    "fontWeights": {
      "thin": "100",
      "extralight": "200",
      "light": "300",
      "normal": "400",
      "medium": "500",
      "semibold": "600",
      "bold": "700",
      "extrabold": "800",
      "black": "900"
    },
    "lineHeights": {
      "none": "1",
      "tight": "1.25",
      "snug": "1.375",
      "normal": "1.5",
      "relaxed": "1.625",
      "loose": "2"
    },
    "letterSpacing": {
      "tighter": "-0.05em",
      "tight": "-0.025em",
      "normal": "0em",
      "wide": "0.025em",
      "wider": "0.05em",
      "widest": "0.1em"
    },
    "responsive": {
      "mobile": {
        "h1": "clamp(1.75rem, 4vw, 2.5rem)",
        "h2": "clamp(1.5rem, 3.5vw, 2rem)",
        "h3": "clamp(1.25rem, 3vw, 1.75rem)",
        "h4": "clamp(1.125rem, 2.5vw, 1.5rem)",
        "body": "clamp(0.875rem, 2vw, 1rem)"
      },
      "desktop": {
        "h1": "clamp(2.5rem, 5vw, 4rem)",
        "h2": "clamp(2rem, 4vw, 3rem)",
        "h3": "clamp(1.75rem, 3vw, 2.25rem)",
        "h4": "clamp(1.5rem, 2.5vw, 1.875rem)",
        "body": "clamp(1rem, 1.5vw, 1.125rem)"
      },
      "tv": {
        "h1": "clamp(4rem, 6vw, 8rem)",
        "h2": "clamp(3rem, 5vw, 6rem)",
        "h3": "clamp(2.25rem, 4vw, 4.5rem)",
        "h4": "clamp(1.875rem, 3vw, 3rem)",
        "body": "clamp(1.5rem, 2vw, 2rem)"
      }
    }
  }
}